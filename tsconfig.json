{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true,
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/node"],
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/*_test.ts"
  ]
}